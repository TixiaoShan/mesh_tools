<library path="lib/librviz_mesh_plugin">
  <class name="rviz_mesh_plugin/TriangleMesh"
         type="rviz_mesh_plugin::TriangleMeshDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays 'mesh_msgs/TriangleMesh' messages.
    </description>
  </class>
  <class name="rviz_mesh_plugin/TexturedMesh"
         type="rviz_mesh_plugin::TexturedMeshDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays 'mesh_msgs' messages with textures.
    </description>
  </class>
  <class name="rviz_mesh_plugin/FaceSelection"
         type="rviz_mesh_plugin::FaceSelectionTool"
         base_class_type="rviz::Tool">
    <description>
      Pick Faces from a mesh from 'mesh_msgs' and get their IDs.
    </description>
  </class>
  <class name="rviz_mesh_plugin/MeshGoal"
         type="rviz_mesh_plugin::MeshGoalTool"
         base_class_type="rviz::Tool">
    <description>
      Select a goal on a mesh.
    </description>
  </class>
</library>
